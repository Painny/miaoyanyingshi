.container{background: #f4f4f4;}
.filter1{top: 0;left: 0;right: 0;bottom: 0;width: 100%;position: absolute;
background-color: #40454d;opacity: .55;height:9.6rem;filter: blur(.6rem);z-index: 0;}
.filter2{top: 0;left: 0;right: 0;bottom: 0;width: 100%;position: absolute;
background-color: #000;opacity: .55;height:9.6rem;z-index: 1;}
.banner{max-height:10rem;width: 100%;z-index: 2;position: relative;}
.banner_img{float: left;display: block;width: 30%;height: 8.5rem;margin:0.4rem;border: 1px solid white;}
.banner_info{float: left;width: 55%;height: 8rem;margin-top:0.5rem;}
.banner_title{font-size: 0.9rem;color: #fff;font-weight: 600;text-overflow: ellipsis;white-space: nowrap;overflow: hidden;}
.banner_dir{font-size: 0.64rem;color: rgba(255,255,255,0.7);text-overflow: ellipsis;white-space: nowrap;overflow: hidden;}
.banner_score{color: rgba(255,255,255,0.7);text-align: left;margin-top: 0.15rem}
.user_score{float: left;margin-top: 0.15rem;}
.user_score_title{font-size: 0.64rem;}
.user_score_res{font-size: 1rem;color: #ffc600}
.line{height: 1.33rem;width: 1px;background-color: rgba(255,255,255,0.2);float: left;margin:0.32rem;}
.pro_score{float: left;margin-top: 0.15rem;}
.pro_score_title{font-size: 0.64rem;}
.pro_score_res{font-size: 1rem;color: #ffc600}
.clear{clear: both;}
.banner_type{clear: both;}
.ucount{font-size: 0.75rem;color:rgba(255,255,255,0.7);}
.banner_bottom{font-size: 0.64rem;color:rgba(255,255,255,0.7);clear: both;margin-top: 0.2rem;}
.intro{font-size: 0.8rem;color: #555;line-height: 1.2rem;text-overflow: ellipsis;word-break: normal;word-wrap: break-word;padding: 0.7rem 0.7rem 0;overflow: hidden;background-color: #fff;}
.arrow{width: 100%;text-align: center;background-color: #fff;}
.vd-show{width: 100%;margin-top: 0;display: block}
.vd-hidden{width: 100%;margin-top: 0;display: none}
.play{width: 1.3rem;height: 1.3rem;position: absolute;bottom: 0.7rem;left: 25%;}
.cmts_tip{width: 100%;text-align: left;font-size: 0.9rem;font-weight: 600;line-height: 2.5rem;border-bottom: 1px solid #e5e5e5;border-top: 1px solid #e5e5e5;padding-left:0.8rem;background-color: #fff;margin-top: 0.5rem;color: #555;}
.cmts_item{width: 100%;border-bottom:1px solid #e5e5e5; padding: 0.4rem;background-color: #fff;}
.star{width: 0.7rem;height: 0.7rem;margin-right: 0.2rem;}
.star_list{margin-left: 0.8rem;line-height: 0.7rem;height: 1.3rem;}
.cmts_item_content{max-height: 20rem;overflow: hidden;padding-left: 0.6rem;padding-right: 0.6rem;text-align: justify;font-size: 0.71rem;color: #555;line-height: 1.2rem;}
.cmts_text{text-overflow: ellipsis;word-break: normal;word-wrap: break-word;}
.cmts_time{color: #999;font-size: 0.7rem;line-height: 1rem;margin-left: 0.2rem;display: inline-block}
.cmts_item_info{padding-left: 0.7rem;}
.user{line-height: 2rem;height: 2rem;vertical-align: middle;width: 50%;display: inline-block;}
.uheader{float: left;width: 1.5rem;height: 1.5rem;border-radius: 50%;display: inline-block;margin: 0.3rem 0.5rem 0 0;}
.uname{font-size: 0.7rem;color: #999;display: inline-block;float: left;line-height: 2rem;height: 2rem;}
.good_info{display: inline-block;height: 2rem;line-height: 2rem;width: 45%;text-align: right;}
.good{width: 0.8rem;height: 0.8rem;}
.good_num{font-size: 0.7rem;color: #999;display: inline-block;height: 0.8rem;line-height: 0.8rem;}